<?xml version="1.0"?>

<project>
    <attributes>
        <attribute>
            <key>xsi:schemaLocation</key>
            <value>http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd</value>
        </attribute>
        <attribute>
            <key>xmlns</key>
            <value>http://maven.apache.org/POM/4.0.0</value>
        </attribute>
        <attribute>
            <key>xmlns:xsi</key>
            <value>http://www.w3.org/2001/XMLSchema-instance</value>
        </attribute>
    </attributes>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ru.prohor.universe</groupId>
        <artifactId>jawa</artifactId>
        <version>final</version>
    </parent>
    <artifactId universeValue="artifactId">*</artifactId>
    <version universeValue="version">*</version>
    <name universeValue="name"/>
    <properties>
        <maven.compiler.source>23</maven.compiler.source>
        <maven.compiler.target>23</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencyManagement universeIf="springUsed">
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>3.4.5</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency universeIf="jocastaUsed">
            <groupId>ru.prohor.universe</groupId>
            <artifactId>jocasta</artifactId>
            <version>*</version>
        </dependency>
        <dependency universeIf="springUsed">
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency universeIf="springUsed">
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin universeIf="buildUsed">
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.7.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass universeValue="mainClass">*</mainClass>
                                </manifest>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <finalName>${project.artifactId}-${project.version}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin universeIf="springUsed">
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>3.4.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass universeValue="mainClass">*</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
